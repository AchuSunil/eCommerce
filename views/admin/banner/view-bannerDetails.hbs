<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <h5 class="m-0 font-weight-bold text-primary">View Banners</h5>
            <a href="/admin/bannerImages"><button class="btn btn-success">Add Banners</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-body">
                <div class="table-responsive">
                    {{#if bannerDetails}}
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No:</th>
                                    <th>Banner Image</th>
                                    <th>Product Name</th>
                                    <th>Product Model</th>
                                    <th>Date Added</th>
                                    <th>Update Banner Img</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>

                            <tbody>
                                {{#each bannerDetails}}
                                    <tr>
                                        <td>{{increment @index}}</td>
                                        <td><img
                                                style="width: 100px; height: 50px;"
                                                src="/Banner-Images/{{this._id}}.jpg"
                                            /></td>
                                        <td>{{this.productName}}</td>
                                        <td>{{this.productModelName}}</td>
                                        <td>{{this.date}}</td>
                                        <td class="text-center">
                                            <a
                                                class="btn btn-success"
                                                aria-current="page"
                                                href="/admin/update-bannerImg/{{this._id}}"
                                            >Update</a></td>
                                        <td>
                                            <a
                                                class="btn btn-danger"
                                                id="deleteBtn"
                                               onclick="deleteBanner(event,'{{this._id}}')"
                                                aria-current="page"
                                                href="/admin/delete-banner/{{this._id}}"
                                            >Delete</a></td>
                                    </tr>
                                {{/each}}
                            </tbody>

                        </table>
                    {{else}}
                        <div class="text-center">
                            <h3 class="text-danger">Add Product Banner Images</h3>
                        </div>

                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script>

     function deleteBanner(e, id) {
    e.preventDefault()



    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {

            window.location.href = '/admin/delete-banner/' + id

        }
    })
}

 </script>