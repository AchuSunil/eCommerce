<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <h5 class="m-0 font-weight-bold text-primary">View Categories</h5>
            <a href="/admin/add-category"><button class="btn btn-success">Add Categories</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>NO:</th>
                                <th>Category Name</th>
                                <th>Update Category </th>
                                <th>Delete Category </th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each category}}
                                <tr>
                                    <td>{{increment @index}}</td>
                                    <td>{{this.categoryName}}</td>
                                    <td>
                                        <a
                                            class="btn btn-success"
                                            aria-current="page"
                                            href="/admin/update-category/{{this._id}}"
                                        >Update</a></td>
                                    <td>
                                        <a
                                            class="btn btn-danger"
                                             onclick="deleteCategory(event,'{{this._id}}')"
                                            aria-current="page"
                                            href="/admin/delete-category/{{this._id}}"
                                        >Delete</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script>
  function deleteCategory(e, id) {
    e.preventDefault()



    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {

            window.location.href = '/admin/delete-category/' + id

        }
    })
}
 </script>
