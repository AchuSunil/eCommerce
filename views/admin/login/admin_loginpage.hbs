
    
<section class="form-signin text-center">
  <form action="/admin/login" method="post">
   <h2 class="h2 mb-3 fw-normal" id="font-color">Welcome Back Admin</h2>
    <h3 class="h3 mb-3 fw-normal">Please sign in</h3>

    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput"  name="email" placeholder="Email address">
      <label class="mt-2" for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    
    <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
   
  </form>
</section>


    
