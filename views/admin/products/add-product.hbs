                    </select>

                </div>
            </div>

            <div>
              <button id="confirm-btn1" type="submit" class="btn btn-success btn-sm mt-4">Submit</button>
            <a href="#" class="btn btn-danger btn-sm ml-2 mt-4" onclick="cancelUpdate(event)">Cancel</a>
            </div>

