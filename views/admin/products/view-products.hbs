

<div class="card shadow mb-4"  style="width: 850px;">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between">
            <h5 class="m-0 font-weight-bold text-primary">View Products</h5>
            <a href="/admin/add-product"><button class="btn btn-success">Add Products</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>No:</th>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Brand Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Date Added</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>

                        <tbody>
                            {{#each products}}
                                <tr>
                                    <td>{{increment @index}}</td>
                                    <td><img
                                            style="width: 50px; height: 50px;"
                                            src="/product-images/{{this._id}}.jpg"
                                        /></td>
                                    <td>{{this.product_name}}</td>
                                    <td>{{this.Brand}}</td>
                                    <td>{{this.Category}}</td>
                                    <td>{{this.Price}}</td>
                                    <td>{{this.addDate}}</td>
                                    <td>
                                        <a
                                            class="btn btn-success"
                                            aria-current="page"
                                            href="/admin/edit-product/{{this._id}}"
                                        >Update</a></td>
                                    <td>
                                        <a
                                            class="btn btn-danger"
                                            id="deleteBtn"
                                            aria-current="page"
                                            onclick="deleteD(event,'{{this._id}}')"
                                            href="/admin/delete-product/{{this._id}}"
                                        >Delete</a></td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script>
function deleteD(e, id) {
    e.preventDefault()



    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        if (result.isConfirmed) {

            window.location.href = '/admin/delete-product/' + id

        }
    })
}
 </script>
