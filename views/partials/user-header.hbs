{{#if user}}
    <header class="header navbar-area">

        <div class="header-middle" style="background-color: 081828;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-3 col-md-3 col-7">
                        <a class="navbar-brand" href="/">
                            <img src="/images/user/logo.png" alt="Logo" style="width: 8rem; height: 3rem;" />
                        </a>
                    </div>
                    <div class="col-lg-6 col-md-7 d-xs-none">
                        <div class="main-menu-search">
                            <form action="/products/search" method="get" class="navbar-search search-style-5">
                                <div class="search-input">
                                    <input type="text" name="search" placeholder="Search" />
                                </div>
                                <div class="search-btn">
                                    <button type="submit">
                                        <i class="lni lni-search-alt"></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-2 col-5">
                        <div class="middle-right-area">

                            <div class="navbar-cart">
                                <div class="wishlist">
                                    <a href="/view-wishlist">
                                        <i class="lni lni-heart"></i>
                                        {{#if wishlistCount}}
                                            <span id="wishlistCount" class="total-items">{{wishlistCount}}</span>
                                        {{else}}
                                            <span id="wishlistCount" class="total-items">0</span>
                                        {{/if}}
                                    </a>
                                </div>
                                <div class="cart-items">
                                    <a href="/cart-details" class="main-btn">
                                        <i class="lni lni-cart"></i>
                                        {{#if cartCount}}
                                            <span class="total-items">{{cartCount}}</span>
                                        {{/if}}
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 col-md-6 col-6">
                    <div class="nav-inner">
                        <div class="mega-category-menu">
                            <span class="cat-button"><i class="lni lni-menu"></i>All Categories</span>
                            <ul class="sub-category">
                                <li>
                                    <a href="/view-smartAndroidTvs">Smart Android Tvs
                                        <i class="lni lni-chevron-right"></i></a>
                                    {{! <ul class="inner-sub-category">
                                        <li><a href="product-grids.html">Screen Size</a></li>
                                        <li><a href="product-grids.html">OS</a></li>

                                    </ul> }}
                                </li>
                                <li>
                                    <a href="/view-standardTvs">Standard Tvs <i class="lni lni-chevron-right"></i></a>
                                    {{! <ul class="inner-sub-category">
                                        <li><a href="product-grids.html">Screen Size</a></li>
                                        <li><a href="product-grids.html">OS</a></li>

                                    </ul> }}
                                </li>
                            </ul>
                        </div>

                        <nav class="navbar navbar-expand-lg">
                            <button
                                class="navbar-toggler mobile-menu-btn"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation"
                            >
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                                <span class="toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a href="/" class="active" aria-label="Toggle navigation">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a style="cursor: pointer;" aria-label="Toggle navigation">Contact Us</a>
                                    </li>

                                    <li class="nav-item">
                                        <a
                                            class="dd-menu collapsed"
                                            href="javascript:void(0)"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#submenu-1-4"
                                            aria-controls="navbarSupportedContent"
                                            aria-expanded="false"
                                            aria-label="Toggle navigation"
                                        >My Account</a>
                                        <ul class="sub-menu collapse" id="submenu-1-4">
                                            <li class="nav-item">
                                                <a href="/userProfile">My Profile</a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="/userAddress">Address</a>
                                            </li>
                                            <li class="nav-item"><a href="/userOrder">My Orders</a></li>

                                        </ul>
                                    </li>

                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-6">
                    <div class="d-flex">

                        <div class="user">
                            <i class="lni lni-user"></i>
                            <span>Hello</span>
                        </div>

                        <ul class="d-flex ml-3">
                            {{#if userLog}}
                                <li class="ml-2">
                                    <a href="/userProfile" class="text-dark">{{userLog.firstName}}</a>
                                </li>
                                <li class="ml-2">
                                    <a href="/logout" class="text-dark">Sign Out</a>
                                </li>
                            {{else}}
                                <li class="ml-2">
                                    <a href="/login" class="text-dark">Sign In</a>
                                </li>
                                <li class="ml-2">
                                    <a href="/register" class="text-dark">Register</a>
                                </li>
                            {{/if}}
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </header>
{{/if}}

