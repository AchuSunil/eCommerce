<style>
    .profile-pic img{
   
    border-radius: 50%;
    box-shadow: 0px 0px 5px 0px #c1c1c1;
    cursor: pointer;
    width: 110px;
    height: 110px;
}  
.profile-pic{
    
    height:132px;
    width:132px;
    padding: 10px;
} 
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3 mt-5">
          <form action="/uploadProfilePic" method="post" enctype="multipart/form-data">
               <div class="profile-pic  mx-auto">
                
                {{#if propic}}
                <img
                    alt="User Pic"
                    src="/profilePicture/{{userDetails._id}}.jpg"
                    id="viewImg"
                    height="200"
                />
                {{else}}
                 <img
                    alt="User Pic"
                    src="https://d30y9cdsu7xlg0.cloudfront.net/png/138926-200.png"
                    id="viewImg"
                    height="200"
                />
                {{/if}}
                <input id="profile-image-upload" hidden name="proPic" type="file" onchange="previewImg(event)" />  
                 

            </div>
            <div class=" mt-3">
                <div class="text-center">
                    <label for="profile-image-upload" class="text-primary " id="uploadImg">upload image</label>
                </div>
               <div class="text-center">
                    <button class="btn btn-primary btn-sm" style="height: 31px; display: none;" type="submit" id="save" >save</button>
               </div>
            </div>
          </form>
            
           

            <div class="list-group mt-3">

                <a href="/userProfile" class="list-group-item list-group-item-action active">My Profile</a>
                <a href="/userAddress" class="list-group-item list-group-item-action"> Address</a>
                <a href="/userOrder" class="list-group-item list-group-item-action">My Orders</a>

            </div>

        </div>
        <div class="col-md-9 mt-5" style="margin-bottom: 4%;">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h4>Your Profile</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <form>

                                <div class="form-group row">
                                    <label for="name" class="col-4 col-form-label">First Name</label>
                                    <div class="col-8">
                                        <input
                                            id="name"
                                            name="firstName"
                                            class="form-control here"
                                            disabled
                                            type="text"
                                            value="{{userDetails.firstName}}"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="lastname" class="col-4 col-form-label">Last Name</label>
                                    <div class="col-8">
                                        <input
                                            id="lastname"
                                            name="lastName"
                                            class="form-control here"
                                            disabled
                                            type="text"
                                            value="{{userDetails.lastName}}"
                                        />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="email" class="col-4 col-form-label">Email*</label>
                                    <div class="col-8">
                                        <input
                                            disabled
                                            id="email"
                                            name="email"
                                            class="form-control here"
                                            value="{{userDetails.email}}"
                                            type="text"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Gender" class="col-4 col-form-label">Gender</label>
                                    <div class="col-8">
                                        <input
                                            id="Gender"
                                            name="Gender"
                                            class="form-control here"
                                            disabled
                                            type="text"
                                            value="{{userDetails.Gender}}"
                                        />
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="mob" class="col-4 col-form-label"> Mobile no:</label>
                                    <div class="col-8">
                                        <input
                                            id="mob"
                                            name="phoneNumber"
                                            class="form-control here"
                                            disabled
                                            type="text"
                                            value="{{userDetails.phoneNumber}}"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="dob" class="col-4 col-form-label">Date of Birth:</label>
                                    <div class="col-8">
                                        <input
                                            id="dob"
                                            name="dob"
                                            class="form-control here"
                                            disabled
                                            type="date"
                                            value="{{userDetails.dob}}"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="Amob" class="col-4 col-form-label">Alternative Contact no:</label>
                                    <div class="col-8">
                                        <input
                                            id="Amob"
                                            name="Amobile"
                                            class="form-control here"
                                            disabled
                                            type="text"
                                            value="{{userDetails.Amobile}}"
                                        />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <a href="/editUserProfile" class="btn btn-primary">Update Profile</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
  function previewImg(event){ 
        document.getElementById('viewImg').src=URL.createObjectURL(event.target.files[0]) 
        document.getElementById('save').style.display = "inline"
        }
        
</script> 



      